  "bugs": {
    "url": "https://github.com/shaunwest/webpack-es6-demo/issues"
  },
  "homepage": "https://github.com/shaunwest/webpack-es6-demo",
  "devDependencies": {
    "babel-core": "^5.0.8",
    "babel-loader": "^5.0.0",
    "live-reload": "^1.1.0",
    "livereload": "^0.3.7",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "rimraf": "^2.3.2",
    "watch": "^0.16.0",
    "webpack": "^1.7.3"
  },
  "dependencies": {
    "express": "^4.12.3",
    "jquery": "^2.1.3",
    "jsdom": "^4.1.0"
  }
