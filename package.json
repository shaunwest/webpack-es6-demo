{
  "name": "webpack-es6-demo",
  "version": "1.0.0",
  "description": "A small demo project that shows how to use webpack for client-side development in ECMAScript 6.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf public/*",
    "build": "npm run build:scripts -s",
    "build:scripts": "webpack",
    "watch:scripts": "watch webpack es6/",
    "serve": "nodemon -w index.js -w public/bundle.js",
    "build:live": "npm run live-reload -s & npm run build:scripts -s",
    "live-reload": "live-reload --port 3001 index.js public/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shaunwest/webpack-es6-demo.git"
  },
  "author": "",
